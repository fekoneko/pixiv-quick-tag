{
  "manifest_version": 2,
  "name": "Pixiv Quick Tag",
  "version": "1.0",
  "description": "Allows to quickly add tags when you bookmark a work on Pixiv. No need to leave the page.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pixiv.net/*"],
      "js": ["src/index.js"],
      "css": ["src/style.css"]
    }
  ],
  "web_accessible_resources": ["src/style.css"]
}
